{% extends 'base.html.twig' %}

{% block title %}Utilisateurs
{% endblock %}

{% block body %}
	<style>
		body {
			background: Gainsboro;
		}
		.table-dark {
			text-align: center;
			margin-left: 10%;
			width: 80%;
			background-color: yellow;

		}
		tr:hover {
			color: grey;
		}
		a {
			text-decoration: none;
			color: white;

		}
		a:hover {

			color: skyblue;

		}
		.CreateNew {
			margin-left: 600px;
			color: black;
			font-family: Trebuchet;
			font-size: 20px;
			font-weight: bold;
		}
		h1 {
			margin-top: 20px;
			margin-bottom: 60px;
			font-variant: small-caps;
		}
	</style>
	<h1 align="center">Liste des utilisateurs</h1>

	<table class="table table-dark">
		<thead>
			<tr>
				<th>Id</th>
				<th>Username</th>
				<th>Roles</th>

				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.username }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>

					<td>
						<a href="{{ path('user_show', {'id': user.id}) }}">
							<button type="button" class="btn btn-warning">show
							</button>
						</a>
						<a href="{{ path('user_edit', {'id': user.id}) }}">
							<button type="button" class="btn btn-success">edit
							</button>
						</a>
						{{ include('user/_delete_form.html.twig') }}
					</td>
				</tr>


			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_register') }}" class="CreateNew">
		<button type="button" class="btn btn-primary">Cr√©er un nouvel utilisateur</button>
	</a>
{% endblock %}
