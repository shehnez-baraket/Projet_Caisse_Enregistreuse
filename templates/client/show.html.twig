{% extends 'base.html.twig' %}

{% block title %}Client
{% endblock %}

{% block body %}
	<style>
		body {
			background: Silver;
		}
		.table-striped {
			text-align: center;
			margin-left: 20%;
			width: 60%;
			background-color: DimGray;
			color: white;
		}
		th,
		td,
		tr {
			color: white;
		}

		h1 {
			margin-top: 20px;
			margin-bottom: 60px;
			font-variant: small-caps;
			color: SteelBlue;
		}
		a {
			text-decoration: none;
			color: white;
			font-size: 20px;
		}
		.btn-dark {
			margin-left: 50%;
		}
		img {
			margin-top: 2em;
			margin-left: 32.5em;
			width: 20em;
			height: 5em;
		}
	</style>
	<h1 align="center">Détails du client numéro :
		{{ client.id }}</h1>

	<table class="table table-striped table-bordered">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ client.id }}</td>
			</tr>
			<tr>
				<th>Code</th>
				<td>{{ client.code }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ client.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ client.prenom }}</td>
			</tr>
			<tr>
				<th>Tel</th>
				<td>{{ client.tel }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ client.email }}</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ client.adresse }}</td>
			</tr>
		</tbody>
	</table>
	<img src="https://www.keejob.com/media/recruiter/recruiter_20338/logo-20338-20200228-155657.PNG" alt="Photo de montagne"/>
{% endblock %}
