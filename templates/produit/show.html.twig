{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<style>
		body {
			background: Gainsboro;
		}
		.table-striped {

			text-align: center;
			margin-left: 20%;
			width: 60%;
			background-color: DimGray;
			color: white;
		}
		th,
		td,
		tr {
			color: white;
		}
		h1 {
			margin-top: 20px;
			margin-bottom: 60px;
			font-variant: small-caps;
			color: SteelBlue;
		}
		a {
			text-decoration: none;
			color: white;
			font-size: 20px;
		}
		.btn-dark {
			margin-left: 50%;
		}
		img {
			margin-top: 2em;
			margin-left: 32.5em;
			width: 20em;
			height: 5em;
		}
	</style>
	<h1 align="center">Les détails du produit numéro
		{{ produit.id }}</h1>
	<table class="table table-striped table-bordered">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ produit.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ produit.nom }}</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ produit.prix }}</td>
			</tr>
			<tr>
				<th>Code</th>
				<td>{{ produit.code }}</td>
			</tr>
			<tr>
				<th>Famille</th>
				<td>{{ produit.famille }}</td>
			</tr>
		</tbody>
	</table>
	<img src="https://www.keejob.com/media/recruiter/recruiter_20338/logo-20338-20200228-155657.PNG" alt="Photo de montagne"/>


{% endblock %}
