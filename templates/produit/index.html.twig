{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<style>
		body {
			background: Gainsboro;
		}
		.table-dark {
			text-align: center;
			width: 80%;
			margin-left: 10%;
		}
		tr:hover {
			color: grey;
		}
		a {
			text-decoration: none;
			color: white;

		}
		a:hover {

			color: skyblue;

		}
		.CreateNew {
			margin-left: 600px;
			color: black;
			font-family: Trebuchet;
			font-size: 20px;
			font-weight: bold;
		}
		h1 {
			margin-top: 20px;
			margin-bottom: 60px;
			font-variant: small-caps;
		}
	</style>
	<h1 align="center">
		Liste des Produits
	</h1>

	<table class="table table-dark">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Prix</th>

				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<td>{{ produit.id }}</td>
					<td>{{ produit.nom }}</td>
					<td>{{ produit.prix }}</td>

					<td>
						<a href="{{ path('produit_show', {'id': produit.id}) }}">
							<button type="button" class="btn btn-warning">show
							</button>
						</a>
						<a href="{{ path('produit_edit', {'id': produit.id}) }}">
							<button type="button" class="btn btn-success">edit
							</button>
						</a>
						{{ include('produit/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('produit_new') }}" class="CreateNew">
		<button type="button" class="btn btn-primary">Cr√©er un nouveau produit</button>
	</a>
{% endblock %}
